doctype html
html
	head
		title= `${title}`
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		style
			include ./css/font.css
		style
			include ./css/bootstrap.min.css
		link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous")

	body
		div.container-fluid.photos
			div.row.justify-content-center

				div.col-md-8.pt-5
					div.row.justify-content-center
						div.col-md-10.shadow.p-3.mb-5.bg-white.rounded
							h4.pt-3 Create your Social Brother Account
							br
							form(id="form" name="form" )
								div.row.justify-content-center
									div.col-md-12
										div(id="error_msg")
								div.row.form-group
									div.col-md-6.mb-3.mb-md-0
										label( for="name") Name
										br
										input(
											class="inp"
											type="text"
											id="name"
											name="name"
											required="Enter Valid Name"
										)
									div.col-md-6
										label( for="userid") userid
										br
										input(
											class="inp"
											type="text"
											id="userid"
											autocomplete="off"
											name="userid"
											required="Enter User Id greater than 3"
										)

								div.row.form-group
									div.col-md-12
										label(for="email") Email
										br
										input(
											class="inp"
											type="email"
											id="email"
											name="email"
											required="Email is Required"
										)
								div.row.form-group
									div.col-md-12
										label(for="password") Password
										br
										input(
											class="inp"
											type="password"
											id="password"
											name="password"
											required="Password is required"
										)
									br
								div.row.form-group
									div.col-md-12
										label(for="password") Retype Password
										br
										input(
											class="inp"
											type="password"
											id="passwordverify"
											name="passwordverify"
											required="Password is required"
										)
									br
								div.row.form-group.pt-4
									div.col-md-6
										a(
											class= "atag"	
											href= "/auth/login") Sign in instead
									div.col-md-6
										input(
											class="button"
											type="submit" 
											value="Sign Up"
											name="button"
											id="button"
										) 
									

			
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js")
		script
			include ./js/register.js
		script
			include ./js/check.js
